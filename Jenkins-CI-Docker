pipeline {
  environment {
    dockerimagename = "junjesh/my_repo1:tome_web"
    registry_url = "https://hub.docker.com/repository/docker/junjesh/my_repo1"
    registryCredential = 'junju1'
    }
    tools {
        maven 'mvn'
    }
    
	agent {
     label 'Jenkins_build_label'
  }
  
  stages {
    stage('Cloning Git') {
      steps {
        checkout scm
      }
	}
	
	 stage ('Build Package') {
      steps {
          sh 'mvn clean package'
         }
       }
    stage('Building image') {
      steps{
        script {
         
         dockerImage = docker.build junjesh/image1
        }
      }
    }
    stage('Pushing Image') {
      steps{
        script {
          docker.withRegistry( https://hub.docker.com/repository/docker/junjesh/my_repo1, junju1 ) {
            dockerImage.push("${env.BUILD_NUMBER}")
            dockerImage.push("image1")
          }
        }
      }
    } 
	
  }
} 
